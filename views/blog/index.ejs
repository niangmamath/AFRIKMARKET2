<%- include('../partials/header', { title: 'Blog' }) %>

<div class="bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl">Notre Blog</h1>
            <p class="mt-5 max-w-xl mx-auto text-xl text-gray-500">Découvrez nos derniers articles, nouvelles et conseils.</p>
        </div>

        <% if (posts.length > 0) { %>
            <div class="mt-12 max-w-lg mx-auto grid gap-8 lg:grid-cols-3 lg:max-w-none">
                <% posts.forEach(post => { %>
                    <div class="flex flex-col rounded-lg shadow-lg overflow-hidden">
                        <a href="/blog/<%= post._id %>" class="block">
                            <% if (post.imageUrl) { %>
                                <img class="h-48 w-full object-cover" src="<%= post.imageUrl %>" alt="Image pour <%= post.title %>">
                            <% } else { %>
                                <div class="h-48 w-full bg-gray-200 flex items-center justify-center">
                                    <span class="text-gray-400">Pas d'image</span>
                                </div>
                            <% } %>
                        </a>
                        <div class="flex-1 bg-white p-6 flex flex-col justify-between">
                            <div class="flex-1">
                                <p class="text-sm font-medium text-indigo-600">
                                    Article
                                </p>
                                <a href="/blog/<%= post._id %>" class="block mt-2">
                                    <p class="text-xl font-semibold text-gray-900 hover:text-indigo-700"><%= post.title %></p>
                                    <%# Coupe le contenu pour un aperçu %>
                                    <p class="mt-3 text-base text-gray-500"><%- post.content.substring(0, 150) %>...</p>
                                </a>
                            </div>
                            <div class="mt-6 flex items-center">
                                <div class="flex-shrink-0">
                                    <span class="sr-only"><%= post.author ? post.author.username : 'Auteur inconnu' %></span>
                                    <img class="h-10 w-10 rounded-full" src="<%= post.author && post.author.profileImageUrl ? post.author.profileImageUrl : '/images/default-avatar.png' %>" alt="Avatar de l'auteur">
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm font-medium text-gray-900">
                                        <%= post.author ? post.author.username : 'Auteur inconnu' %>
                                    </p>
                                    <div class="flex space-x-1 text-sm text-gray-500">
                                        <time datetime="<%= post.createdAt.toISOString() %>"><%= new Date(post.createdAt).toLocaleDateString('fr-FR') %></time>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="text-center mt-12 py-16 px-4 bg-white rounded-lg shadow-md">
                <h2 class="text-2xl font-semibold text-gray-700">Rien à voir ici pour l'instant !</h2>
                <p class="mt-2 text-gray-500">Aucun article de blog n'a encore été publié. Revenez bientôt !</p>
            </div>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>
