<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' | AfrikMarket' : 'AfrikMarket | Petites Annonces au Sénégal' %></title>
    <meta name="description" content="<%= typeof description !== 'undefined' ? description : 'Achetez et vendez tout au Sénégal : voitures, immobilier, smartphones, et plus encore. Publiez votre annonce gratuitement sur AfrikMarket.' %>">
    <meta name="keywords" content="<%= typeof keywords !== 'undefined' ? keywords : 'petites annonces, Sénégal, dakar, vendre, acheter, gratuit' %>">
    <meta property="og:title" content="<%= typeof title !== 'undefined' ? title : 'AfrikMarket' %>">
    <meta property="og:description" content="<%= typeof description !== 'undefined' ? description : 'Le meilleur site de petites annonces au Sénégal.' %>">
    <meta property="og:image" content="<%= typeof imageUrl !== 'undefined' ? imageUrl : '/images/og-image.jpg' %>">
    <meta property="og:url" content="<%= 'https://afrikmarket.sn' + (typeof req !== 'undefined' ? req.originalUrl : '') %>">
    <meta property="og:type" content="website">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">

    <header x-data="{ mobileMenuOpen: false, userMenuOpen: false }" class="bg-white shadow-md sticky top-0 z-50">
        <nav class="container mx-auto px-4 sm:px-6 py-3">
            <div class="flex items-center justify-between">
                <!-- Logo -->
                <div class="flex-shrink-0">
                     <a href="/" class="flex items-center space-x-2">
                        <img src="https://res.cloudinary.com/dlqwxsufy/image/upload/v1764675219/afrikmarket/locuim6gcdd8zcfbjsry.png" alt="Logo AfrikMarket" class="h-10 w-auto">
                        <span class="text-xl font-semibold text-gray-700">AfrikMarket</span>
                    </a>
                </div>

                <!-- Navigation principale (Desktop) -->
                <div class="hidden md:flex items-center space-x-6">
                    <a href="/" class="text-gray-600 hover:text-indigo-600 transition duration-150 ease-in-out">Accueil</a>
                    <a href="/ads" class="text-gray-600 hover:text-indigo-600 transition duration-150 ease-in-out">Annonces</a>
                    <a href="/blog" class="text-gray-600 hover:text-indigo-600 transition duration-150 ease-in-out">Blog</a>
                </div>

                <!-- Icônes et boutons de droite (Desktop) -->
                <div class="hidden md:flex items-center space-x-4">
                    <% if (typeof user !== 'undefined' && user) { %>
                        <a href="/ads/new" class="bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 font-semibold transition duration-300">Publier une annonce</a>
                        <!-- Menu utilisateur -->
                        <div @click.away="userMenuOpen = false" class="relative">
                            <button @click="userMenuOpen = !userMenuOpen" class="flex items-center focus:outline-none">
                                <img src="<%= user.profileImageUrl ? user.profileImageUrl : 'https://via.placeholder.com/150' %>" class="h-9 w-9 rounded-full object-cover border-2 border-transparent hover:border-indigo-500">
                            </button>
                            <div x-show="userMenuOpen" class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-xl z-20" x-cloak>
                                <a href="/profile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-indigo-500 hover:text-white">Mon Profil</a>
                                <% if (user.role === 'admin') { %>
                                    <a href="/admin" class="block px-4 py-2 text-sm text-gray-700 hover:bg-indigo-500 hover:text-white">Tableau de bord</a>
                                <% } %>
                                <form action="/auth/logout" method="POST" class="w-full">
                                    <button type="submit" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-indigo-500 hover:text-white">Déconnexion</button>
                                </form>
                            </div>
                        </div>
                    <% } else { %>
                        <a href="/auth/login" class="text-gray-600 hover:text-indigo-600">Connexion</a>
                        <a href="/auth/register" class="bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 font-semibold transition duration-300">Inscription</a>
                    <% } %>
                </div>

                <!-- Bouton Hamburger (Mobile) -->
                <div class="md:hidden flex items-center">
                    <button @click="mobileMenuOpen = !mobileMenuOpen" class="text-gray-600 hover:text-indigo-600 focus:outline-none">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                </div>
            </div>

            <!-- Menu Mobile -->
            <div x-show="mobileMenuOpen" class="md:hidden mt-4" x-cloak>
                <a href="/" class="block py-2 px-4 text-sm text-gray-700 hover:bg-indigo-100 rounded">Accueil</a>
                <a href="/ads" class="block py-2 px-4 text-sm text-gray-700 hover:bg-indigo-100 rounded">Annonces</a>
                <a href="/blog" class="block py-2 px-4 text-sm text-gray-700 hover:bg-indigo-100 rounded">Blog</a>
                <hr class="my-2">
                <% if (typeof user !== 'undefined' && user) { %>
                    <a href="/ads/new" class="block w-full text-center py-2 px-4 text-sm bg-indigo-500 text-white rounded-md hover:bg-indigo-600">Publier une annonce</a>
                    <div class="mt-4 border-t pt-4">
                        <a href="/profile" class="block py-2 px-4 text-sm text-gray-700 hover:bg-indigo-100 rounded">Mon Profil</a>
                         <% if (user.role === 'admin') { %>
                            <a href="/admin" class="block py-2 px-4 text-sm text-gray-700 hover:bg-indigo-100 rounded">Tableau de bord</a>
                        <% } %>
                        <form action="/auth/logout" method="POST" class="w-full">
                            <button type="submit" class="block w-full text-left py-2 px-4 text-sm text-gray-700 hover:bg-indigo-100 rounded">Déconnexion</button>
                        </form>
                    </div>
                <% } else { %>
                     <div>
                        <a href="/auth/login" class="block py-2 px-4 text-sm text-gray-700 hover:bg-indigo-100 rounded">Connexion</a>
                        <a href="/auth/register" class="block py-2 px-4 text-sm text-gray-700 hover:bg-indigo-100 rounded">Inscription</a>
                    </div>
                <% } %>
            </div>
        </nav>
    </header>

    <!-- Le contenu de la page sera injecté ici -->
