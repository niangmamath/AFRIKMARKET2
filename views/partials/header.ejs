<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' | AfrikMarket' : 'AfrikMarket | Petites Annonces au Sénégal' %></title>
    
    <!-- SEO & Social Sharing -->
    <% const adDescription = typeof ad !== 'undefined' && ad.description ? ad.description.substring(0, 160) : 'Achetez et vendez tout au Sénégal : voitures, immobilier, smartphones, et plus encore. Publiez votre annonce gratuitement sur AfrikMarket.'; %>
    <% const adTitle = typeof title !== 'undefined' ? title : 'AfrikMarket'; %>
    <% const adImage = typeof ad !== 'undefined' && ad.imageUrls && ad.imageUrls.length > 0 ? ad.imageUrls[0] : 'https://res.cloudinary.com/dlqwxsufy/image/upload/v1716909471/placeholder_y4bnto.png'; %>
    
    <meta name="description" content="<%= adDescription %>">
    <meta name="keywords" content="<%= typeof keywords !== 'undefined' ? keywords : 'petites annonces, Sénégal, dakar, vendre, acheter, gratuit' %>">

    <!-- Open Graph (pour Facebook, WhatsApp, etc.) -->
    <meta property="og:title" content="<%= adTitle %>">
    <meta property="og:description" content="<%= adDescription %>">
    <meta property="og:url" content="<%= 'https://afrikmarket.shop' + (typeof req !== 'undefined' ? req.originalUrl : '') %>">
    <meta property="og:site_name" content="AfrikMarket">
    <meta property="og:type" content="<%= typeof ad !== 'undefined' ? 'product' : 'website' %>">
    <meta property="og:image" content="<%= adImage %>">
    <meta property="og:image:secure_url" content="<%= adImage %>">
    <meta property="og:image:width" content="800">
    <meta property="og:image:height" content="800">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@AfrikMarket">
    <meta name="twitter:title" content="<%= adTitle %>">
    <meta name="twitter:description" content="<%= adDescription %>">
    <meta name="twitter:image" content="<%= adImage %>">

    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/styles.css">
    
    <style>
        [x-cloak] { display: none !important; }
    </style>
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">

    <header x-data="{ mobileMenuOpen: false }" class="bg-white shadow-md sticky top-0 z-50">
        <nav class="container mx-auto px-4 sm:px-6 py-3">
            <div class="flex items-center justify-between">
                <!-- Logo -->
                <div class="flex-shrink-0">
                     <a href="/" class="flex items-center space-x-2">
                        <img src="https://res.cloudinary.com/dlqwxsufy/image/upload/v1764675219/afrikmarket/locuim6gcdd8zcfbjsry.png" alt="Logo AfrikMarket" class="h-10 w-auto">
                        <span class="text-xl font-semibold text-gray-700">AfrikMarket</span>
                    </a>
                </div>

                <!-- Navigation principale (Desktop) -->
                <div class="hidden md:flex items-center space-x-6">
                    <a href="/" class="text-gray-600 hover:text-indigo-600 transition duration-150 ease-in-out">Accueil</a>
                    <a href="/ads" class="text-gray-600 hover:text-indigo-600 transition duration-150 ease-in-out">Annonces</a>
                    <a href="/blog" class="text-gray-600 hover:text-indigo-600 transition duration-150 ease-in-out">Blog</a>
                </div>

                <!-- Actions pour l'utilisateur (Desktop) -->
                <div class="hidden md:flex items-center space-x-5">
                    <% if (typeof user !== 'undefined' && user) { %>
                        <!-- Utilisateur Connecté -->
                        <a href="/ads/new" class="bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 font-semibold transition duration-300 ease-in-out">Publier une annonce</a>
                        
                        <% if (user.role === 'admin') { %>
                            <a href="/admin" class="text-gray-600 hover:text-indigo-600 font-medium transition duration-150 ease-in-out">Tableau de bord</a>
                        <% } %>

                        <a href="/user/profile" class="text-gray-600 hover:text-indigo-600 font-medium transition duration-150 ease-in-out">Mon Profil</a>

                        <form action="/auth/logout" method="POST">
                            <button type="submit" class="text-gray-600 hover:text-indigo-600 font-medium transition duration-150 ease-in-out">Déconnexion</button>
                        </form>
                        
                        <a href="/user/profile">
                            <img src="<%= user.profileImageUrl ? user.profileImageUrl : 'data:image/svg+xml;base64,' %>" class="h-9 w-9 rounded-full object-cover border-2 border-transparent hover:border-indigo-500" alt="Photo de profil">
                        </a>

                    <% } else { %>
                        <!-- Utilisateur non connecté -->
                        <a href="/auth/login" class="text-gray-600 hover:text-indigo-600 font-medium">Connexion</a>
                        <a href="/auth/register" class="bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 font-semibold transition duration-300">Inscription</a>
                    <% } %>
                </div>

                <!-- Bouton Hamburger (Mobile) -->
                <div class="md:hidden flex items-center">
                    <button @click="mobileMenuOpen = !mobileMenuOpen" class="text-gray-600 hover:text-indigo-600 focus:outline-none">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                </div>
            </div>

            <!-- Menu Mobile -->
            <div x-show="mobileMenuOpen" x-cloak class="md:hidden mt-4">
                <a href="/" class="block py-2 px-4 text-sm text-gray-700 hover:bg-indigo-100 rounded">Accueil</a>
                <a href="/ads" class="block py-2 px-4 text-sm text-gray-700 hover:bg-indigo-100 rounded">Annonces</a>
                <a href="/blog" class="block py-2 px-4 text-sm text-gray-700 hover:bg-indigo-100 rounded">Blog</a>
                <hr class="my-2">
                
                <% if (typeof user !== 'undefined' && user) { %>
                    <!-- Actions pour l'utilisateur connecté (Mobile) -->
                    <a href="/ads/new" class="block w-full text-center py-2 px-4 text-sm bg-indigo-500 text-white rounded-md hover:bg-indigo-600">Publier une annonce</a>
                    <div class="mt-4 border-t pt-4">
                        <a href="/user/profile" class="block py-2 px-4 text-sm text-gray-700 hover:bg-indigo-100 rounded">Mon Profil</a>
                        <% if (user.role === 'admin') { %>
                            <a href="/admin" class="block py-2 px-4 text-sm text-gray-700 hover:bg-indigo-100 rounded">Tableau de bord</a>
                        <% } %>
                        <form action="/auth/logout" method="POST" class="w-full">
                            <button type="submit" class="block w-full text-left py-2 px-4 text-sm text-gray-700 hover:bg-indigo-100 rounded">Déconnexion</button>
                        </form>
                    </div>
                <% } else { %>
                    <!-- Actions pour l'utilisateur non connecté (Mobile) -->
                     <div>
                        <a href="/auth/login" class="block py-2 px-4 text-sm text-gray-700 hover:bg-indigo-100 rounded">Connexion</a>
                        <a href="/auth/register" class="block py-2 px-4 text-sm text-gray-700 hover:bg-indigo-100 rounded">Inscription</a>
                    </div>
                <% } %>
            </div>
        </nav>
    </header>

    <!-- Le contenu de la page sera injecté ici -->
