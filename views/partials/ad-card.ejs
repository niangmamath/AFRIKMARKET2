<div class="relative flex flex-col rounded-lg shadow-lg overflow-hidden transition-transform transform hover:-translate-y-1">
    <a href="/ads/<%= ad._id %>" class="block">
        <img class="h-48 w-full object-cover" src="<%- ad.imageUrl %>" alt="Image pour <%= ad.title %>">
    </a>
    <div class="flex-1 bg-white p-4 flex flex-col justify-between">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">
                <a href="/ads/<%= ad._id %>" class="hover:underline">
                    <%= ad.title %>
                </a>
            </h3>
            <p class="mt-1 text-sm text-gray-600"><%= ad.category %></p>
        </div>
        <div class="mt-3">
            <p class="text-xl font-bold text-indigo-600"><%= new Intl.NumberFormat('fr-MA', { style: 'currency', currency: 'MAD' }).format(ad.price) %></p>
        </div>
    </div>
    <% if (locals.showStatus) { %>
        <div class="absolute top-2 right-2 px-2 py-1 text-xs font-semibold rounded-full <%= locals.statusClass || 'bg-yellow-100 text-yellow-800' %>">
            <%= locals.statusText %>
        </div>
    <% } %>
</div>
