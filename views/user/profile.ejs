<%- include('../partials/header') %>

<div class="bg-gray-100 min-h-screen">
    <div class="container mx-auto py-12 px-4 sm:px-6 lg:px-8">

        <%- include('../partials/flash-messages') %>

        <!-- En-tête du profil -->
        <div class="bg-white rounded-lg shadow-md p-6 md:p-8 mb-8">
            <div class="flex flex-col md:flex-row items-center">
                <div class="relative mb-4 md:mb-0 md:mr-8">
                    <img class="h-32 w-32 rounded-full object-cover shadow-lg" src="<%= profileUser.profileImageUrl || '/images/default-avatar.png' %>" alt="Photo de profil de <%= profileUser.username %>">
                </div>
                
                <div class="text-center md:text-left">
                    <h1 class="text-3xl font-bold text-gray-900"><%= profileUser.username %></h1>
                    <p class="text-md text-gray-600"><%= profileUser.email %></p>
                    <p class="text-sm text-gray-500 mt-1">Membre depuis le <%= new Date(profileUser.createdAt).toLocaleDateString('fr-FR') %></p>
                </div>
            </div>
        </div>

        <!-- Contenu principal -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

            <!-- Colonne de gauche : Annonces -->
            <div class="lg:col-span-2">
                 <div class="bg-white rounded-lg shadow-md">
                    <% if(isPublicProfile) { %>
                        <div class="p-6 border-b">
                           <h2 class="text-2xl font-bold text-gray-800">Annonces de <%= profileUser.username %></h2>
                        </div>
                        <div class="p-6">
                             <% if (approvedAds && approvedAds.length > 0) { %>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <% approvedAds.forEach(ad => { %>
                                        <%- include('../partials/ad-card', { ad: ad }) %>
                                    <% }) %>
                                </div>
                            <% } else { %>
                                <div class="text-center py-12">
                                    <p class="text-gray-500">Cet utilisateur n'a aucune annonce active pour le moment.</p>
                                </div>
                            <% } %>
                        </div>
                    <% } else { %>
                        <!-- Logique des onglets pour le profil personnel -->
                        <div x-data="{ tab: 'approved' }">
                            <div class="border-b border-gray-200">
                                <nav class="-mb-px flex space-x-6 px-6" aria-label="Tabs">
                                    <button @click="tab = 'approved'" :class="{ 'border-indigo-500 text-indigo-600': tab === 'approved', 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300': tab !== 'approved' }" class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                                        Approuvées <span class="bg-gray-200 text-gray-600 rounded-full px-2 py-1 text-xs"><%= approvedAds.length %></span>
                                    </button>
                                    <button @click="tab = 'pending'" :class="{ 'border-indigo-500 text-indigo-600': tab === 'pending', 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300': tab !== 'pending' }" class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                                        En attente <span class="bg-gray-200 text-gray-600 rounded-full px-2 py-1 text-xs"><%= pendingAds.length %></span>
                                    </button>
                                    <button @click="tab = 'rejected'" :class="{ 'border-indigo-500 text-indigo-600': tab === 'rejected', 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300': tab !== 'rejected' }" class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                                        Rejetées <span class="bg-gray-200 text-gray-600 rounded-full px-2 py-1 text-xs"><%= rejectedAds.length %></span>
                                    </button>
                                </nav>
                            </div>

                            <div class="p-6">
                                <div x-show="tab === 'approved'">
                                    <% if (approvedAds && approvedAds.length > 0) { %>
                                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                            <% approvedAds.forEach(ad => { %>
                                                <%- include('../partials/ad-card', { ad: ad }) %>
                                            <% }) %>
                                        </div>
                                    <% } else { %>
                                        <p class="text-gray-500">Vous n'avez aucune annonce approuvée.</p>
                                    <% } %>
                                </div>
                                <div x-show="tab === 'pending'" style="display: none;">
                                    <% if (pendingAds && pendingAds.length > 0) { %>
                                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                            <% pendingAds.forEach(ad => { %>
                                                <%- include('../partials/ad-card', { ad: ad }) %>
                                            <% }) %>
                                        </div>
                                    <% } else { %>
                                        <p class="text-gray-500">Vous n'avez aucune annonce en attente de validation.</p>
                                    <% } %>
                                </div>
                                <div x-show="tab === 'rejected'" style="display: none;">
                                     <% if (rejectedAds && rejectedAds.length > 0) { %>
                                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                            <% rejectedAds.forEach(ad => { %>
                                                <%- include('../partials/ad-card', { ad: ad }) %>
                                            <% }) %>
                                        </div>
                                    <% } else { %>
                                        <p class="text-gray-500">Vous n'avez aucune annonce rejetée.</p>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Colonne de droite : Mise à jour du profil (uniquement pour le profil personnel) -->
             <% if(!isPublicProfile) { %>
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h2 class="text-xl font-bold text-gray-800 mb-6">Modifier mon profil</h2>

                    <form action="/user/profile?_method=PUT" method="POST" enctype="multipart/form-data">
                        <div class="space-y-6">
                             <!-- Gestion des erreurs de validation -->
                            <% if (errors && errors.length > 0) { %>
                                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                                    <strong class="font-bold">Erreur !</strong>
                                    <ul class="mt-2 list-disc list-inside">
                                        <% errors.forEach(error => { %>
                                            <li><%= error.msg %></li>
                                        <% }) %>
                                    </ul>
                                </div>
                            <% } %>

                            <div>
                                <label for="username" class="block text-sm font-medium text-gray-700">Nom d'utilisateur</label>
                                <input type="text" name="username" id="username" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" value="<%= profileUser.username %>" required>
                            </div>

                            <div>
                                <label for="email" class="block text-sm font-medium text-gray-700">Adresse e-mail</label>
                                <input type="email" name="email" id="email" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" value="<%= profileUser.email %>" required>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700">Photo de profil</label>
                                <div class="mt-2 flex items-center">
                                    <span class="inline-block h-12 w-12 rounded-full overflow-hidden bg-gray-100">
                                         <img id="image-preview" class="h-full w-full object-cover" src="<%= profileUser.profileImageUrl || '/images/default-avatar.png' %>" alt="Aperçu de l'image">
                                    </span>
                                    <input type="file" name="profileImage" id="profileImage" class="ml-5 bg-white py-2 px-3 border border-gray-300 rounded-md shadow-sm text-sm leading-4 font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" onchange="previewImage(event)">
                                </div>
                            </div>

                        </div>
                        <div class="mt-8 border-t border-gray-200 pt-5">
                            <div class="flex justify-end">
                                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Enregistrer les modifications</button>
                            </div>
                        </div>
                    </form>
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Alpine.js pour la gestion des onglets -->
<script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>

<script>
    function previewImage(event) {
        const reader = new FileReader();
        reader.onload = function(){
            const output = document.getElementById('image-preview');
            output.src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
    }
</script>

<%- include('../partials/footer') %>
