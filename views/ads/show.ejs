<%- include('../partials/header') %>

<div class="bg-white">
  <div class="pt-6 pb-16 sm:pb-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-2 lg:gap-x-8 lg:items-start">
        
        <!-- Image gallery -->
        <div class="flex flex-col items-center">
          <div class="w-full max-w-lg bg-gray-100 rounded-lg overflow-hidden shadow-lg">
            <% if (ad.imageUrl) { %>
              <img src="<%= ad.imageUrl %>" alt="<%- ad.title %>" class="w-full h-full object-center object-cover">
            <% } else { %>
              <div class="w-full h-full flex items-center justify-center bg-gray-200">
                <svg class="h-48 w-48 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
              </div>
            <% } %>
          </div>
        </div>

        <!-- Product info -->
        <div class="mt-10 px-4 sm:px-0 sm:mt-16 lg:mt-0">
          <div class="flex justify-between items-center">
             <h1 class="text-3xl font-extrabold tracking-tight text-gray-900"><%= ad.title %></h1>
              <% if (isAuthor || (locals.user && locals.user.role === 'admin')) { %>
                  <div class="flex-shrink-0 flex items-center space-x-2">
                      <a href="/ads/<%= ad._id %>/edit" class="p-2 text-gray-400 hover:text-indigo-600" title="Modifier">
                          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.5L14.732 3.732z" /></svg>
                      </a>
                      <form action="/ads/<%= ad._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette annonce ?');">
                          <button type="submit" class="p-2 text-gray-400 hover:text-red-600" title="Supprimer">
                              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
                          </button>
                      </form>
                  </div>
              <% } %>
          </div>

          <div class="mt-3">
            <p class="text-3xl text-gray-900 font-semibold"><%= ad.price.toLocaleString('fr-MA', { style: 'currency', currency: 'MAD', minimumFractionDigits: 2 }) %></p>
          </div>

          <div class="mt-6">
            <h3 class="sr-only">Description</h3>
            <div class="space-y-6 text-base text-gray-700 whitespace-pre-wrap"><%= ad.description %></div>
          </div>
          
           <div class="mt-6 pt-6 border-t border-gray-200">
              <h3 class="text-sm font-bold text-gray-600 uppercase tracking-wide">Détails de l'annonce</h3>
              <ul class="mt-4 space-y-2 text-sm text-gray-600">
                  <li class="flex items-center"><span class="font-bold w-28">Catégorie:</span> <span><%= ad.category %></span></li>
                  <li class="flex items-center"><span class="font-bold w-28">Lieu:</span> <span><%= ad.location %></span></li>
                  <li class="flex items-center"><span class="font-bold w-28">Publiée le:</span> <span><%= new Date(ad.createdAt).toLocaleDateString('fr-FR') %></span></li>
              </ul>
          </div>

          <!-- Vendeur Info -->
          <div class="mt-6 pt-6 border-t border-gray-200">
            <h3 class="text-sm font-bold text-gray-600 uppercase tracking-wide">Informations sur le vendeur</h3>
            <div class="flex items-center mt-4">
              <img class="h-12 w-12 rounded-full object-cover" src="<%= ad.author.profileImageUrl || '/images/default-avatar.png' %>" alt="<%= ad.author.username %>">
              <div class="ml-4">
                <p class="text-sm font-bold text-gray-900"><%= ad.author.username %></p>
                <a href="/user/<%= ad.author._id %>" class="text-sm font-medium text-indigo-600 hover:text-indigo-500">Voir le profil</a>
              </div>
            </div>
          </div>

          <!-- Call To Action -->
          <div class="mt-10">
             <% if (ad.phoneNumber && !isAuthor) { %>
                <a href="tel:<%= ad.phoneNumber %>" class="w-full bg-indigo-600 border border-transparent rounded-md py-3 px-8 flex items-center justify-center text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.518.758a10.024 10.024 0 006.46 6.46l.758-1.518a1 1 0 011.06-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path></svg>
                    Appeler le vendeur
                </a>
             <% } else if (!isAuthor) { %>
                <!-- Fallback si pas de numéro, on pourrait imaginer un formulaire de contact ici -->
                <button type="button" class="w-full bg-gray-400 border border-transparent rounded-md py-3 px-8 flex items-center justify-center text-base font-medium text-white cursor-not-allowed">
                    Contacter le vendeur (indisponible)
                </button>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Pas de script nécessaire pour l'appel -->

<%- include('../partials/footer') %>
