<div class="container mx-auto mt-10">
    <h1 class="text-3xl font-bold mb-6"><%= title %></h1>

    <% if (locals.errors && errors.length > 0) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <strong class="font-bold">Erreur !</strong>
            <ul>
                <% errors.forEach(function(error) { %>
                    <li><%= error.msg %></li>
                <% }); %>
            </ul>
        </div>
    <% } %>

    <form action="/ads/<%= ad._id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <div class="mb-4">
            <label for="title" class="block text-gray-700 text-sm font-bold mb-2">Titre</label>
            <input type="text" name="title" id="title" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%= ad.title %>" required>
        </div>
        <div class="mb-4">
            <label for="price" class="block text-gray-700 text-sm font-bold mb-2">Prix</label>
            <input type="number" name="price" id="price" step="0.01" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%= ad.price %>" required>
        </div>
        <div class="mb-4">
            <label for="category" class="block text-gray-700 text-sm font-bold mb-2">Catégorie</label>
            <select name="category" id="category" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                <% categories.forEach(function(category) { %>
                    <option value="<%= category %>" <%= ad.category === category ? 'selected' : '' %>><%= category %></option>
                <% }); %>
            </select>
        </div>
        <div class="mb-6">
            <label for="description" class="block text-gray-700 text-sm font-bold mb-2">Description</label>
            <textarea name="description" id="description" rows="5" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required><%= ad.description %></textarea>
        </div>
        <div class="mb-4">
            <label for="image" class="block text-gray-700 text-sm font-bold mb-2">Image Actuelle</label>
            <% if (ad.imageUrl) { %>
                <img src="<%= ad.imageUrl %>" alt="Image de l'annonce" class="w-48 h-auto rounded mb-2">
            <% } else { %>
                <p>Aucune image</p>
            <% } %>
            <label for="image" class="block text-gray-700 text-sm font-bold mb-2 mt-2">Changer l'image (facultatif)</label>
            <input type="file" name="image" id="image" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
        </div>
        <div class="flex items-center justify-between">
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Mettre à jour</button>
            <a href="/ads/<%= ad._id %>" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">Annuler</a>
        </div>
    </form>
</div>