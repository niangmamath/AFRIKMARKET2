<%- include('../partials/header') %>

<div class="bg-gray-100 min-h-screen py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
            <div class="p-8">
                <div class="text-center">
                    <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Créez votre annonce</h1>
                    <p class="mt-3 text-lg text-gray-500">Remplissez les détails ci-dessous pour publier votre produit.</p>
                </div>

                <form action="/ads" method="POST" enctype="multipart/form-data" class="mt-10 space-y-8">
                    
                    <!-- Détails de l'annonce -->
                    <div class="space-y-6">
                        <div>
                            <label for="title" class="block text-sm font-medium text-gray-700">Titre</label>
                            <input type="text" name="title" id="title" class="block w-full rounded-md border-gray-300" required>
                        </div>
                        <div>
                            <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
                            <textarea id="description" name="description" rows="4" class="block w-full rounded-md border-gray-300" required></textarea>
                        </div>
                    </div>

                    <!-- Images avec prévisualisation -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Photos du produit (jusqu'à 6)</label>
                        <div id="image-preview-container" class="hidden relative mt-2 w-full max-w-sm mx-auto bg-gray-100 rounded-lg shadow-inner overflow-hidden">
                            <img id="image-preview" src="#" alt="Aperçu de l'image principale" class="w-full h-auto object-cover"/>
                            <div id="image-count-overlay" class="absolute bottom-2 right-2 bg-black bg-opacity-50 text-white text-xs font-semibold px-2 py-1 rounded-md"></div>
                        </div>
                        <div id="upload-ui" class="mt-2 flex justify-center rounded-md border-2 border-dashed border-gray-300 px-6 pt-5 pb-6">
                            <div class="space-y-1 text-center">
                                <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true"><path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" /></svg>
                                <div class="flex text-sm text-gray-600">
                                    <label for="file-upload" class="relative cursor-pointer rounded-md bg-white font-medium text-indigo-600 hover:text-indigo-500">
                                        <span>Téléchargez jusqu'à 6 images</span>
                                        <input id="file-upload" name="images" type="file" class="sr-only" accept="image/png, image/jpeg, image/gif" multiple>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Détails supplémentaires -->
                    <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
                        <div>
                            <label for="price" class="block text-sm font-medium text-gray-700">Prix (MAD)</label>
                            <input type="number" name="price" id="price" class="block w-full rounded-md border-gray-300" required>
                        </div>
                        <div>
                            <label for="category" class="block text-sm font-medium text-gray-700">Catégorie</label>
                            <select id="category" name="category" class="mt-1 block w-full rounded-md border-gray-300">
                                <% categories.forEach(function(category) { %>
                                    <option value="<%= category %>"><%= category %></option>
                                <% }); %>
                            </select>
                        </div>
                         <div>
                            <label for="location" class="block text-sm font-medium text-gray-700">Lieu</label>
                            <input type="text" name="location" id="location" class="block w-full rounded-md border-gray-300" required>
                        </div>
                        <div>
                            <label for="phoneNumber" class="block text-sm font-medium text-gray-700">Téléphone</label>
                            <input type="tel" name="phoneNumber" id="phoneNumber" class="block w-full rounded-md border-gray-300" required>
                        </div>
                    </div>

                    <!-- Champ pour le lien d'affiliation (Admin seulement) -->
                    <% if (locals.user && locals.user.role === 'admin') { %>
                        <div class="mt-6">
                            <label for="affiliateLink" class="block text-sm font-medium text-gray-700">Lien d'affiliation (Optionnel)</label>
                            <p class="text-xs text-gray-500 mb-2">Ce champ est réservé aux administrateurs.</p>
                            <input type="url" name="affiliateLink" id="affiliateLink" placeholder="https://www.amazon.com/dp/CODE_PRODUIT?tag=votre-tag-20" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                        </div>
                    <% } %>

                    <!-- Actions -->
                    <div class="pt-5">
                        <div class="flex justify-end">
                            <button type="submit" class="inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white">Créer l'annonce</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Script pour la prévisualisation des images -->
<script>
    const fileUpload = document.getElementById('file-upload');
    const imagePreviewContainer = document.getElementById('image-preview-container');
    const imagePreview = document.getElementById('image-preview');
    const uploadUi = document.getElementById('upload-ui');
    const imageCountOverlay = document.getElementById('image-count-overlay');

    fileUpload.addEventListener('change', function(event) {
        const files = event.target.files;
        if (files && files.length > 0) {
            // Limite à 6 fichiers
            if (files.length > 6) {
                alert('Vous ne pouvez télécharger que 6 images au maximum.');
                // Réinitialiser l'input
                fileUpload.value = ''; 
                return;
            }

            const firstFile = files[0];
            if (firstFile && firstFile.type.startsWith('image/')) {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    imagePreview.src = e.target.result;
                    imagePreviewContainer.classList.remove('hidden');
                    uploadUi.classList.add('hidden');
                    
                    // Affiche le nombre d'images supplémentaires
                    if (files.length > 1) {
                        imageCountOverlay.textContent = `+ ${files.length - 1}`;
                    } else {
                        imageCountOverlay.textContent = '';
                    }
                }
                
                reader.readAsDataURL(firstFile);
            }
        }
    });
</script>

<%- include('../partials/footer') %>
